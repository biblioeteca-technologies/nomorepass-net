<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExampleXamarinForms.QrViews.QrToSendPass">
    <ContentPage.Content>
        <StackLayout x:Name="stkQR">
            <Frame BackgroundColor="#2196F3"
                   Padding="24"
                   CornerRadius="0">
                <Label Text="Testing API NoMorePass-Net"
                       HorizontalTextAlignment="Center"
                       TextColor="White"
                       FontSize="36" />
            </Frame>
            <Label Text="Qr to send a password to the phone"
                   FontSize="20"
                   Padding="30,10,30,10"
                   HorizontalTextAlignment="Center" />
            <Entry x:Name="EntryQR"
                   IsReadOnly="False"
                   Text=""
                   Placeholder="Username"></Entry>
            <Entry x:Name="EntryQRPass"
                   IsReadOnly="False"
                   Text=""
                   Placeholder="Password"></Entry>
            <Button x:Name="QrGenerator"
                    Text="Qr to send the password"
                    Clicked="QrButtonSend_Clicked"
                    IsEnabled="True"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>